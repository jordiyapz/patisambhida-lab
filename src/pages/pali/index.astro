---
import PaliLayout from "@/layouts/PaliLayout.astro";
import { fetchPaliSheets } from "@/modules/pali-translation/lib/services";
import LeftDrawer from "@/modules/pali-translation/components/LeftDrawer";

try {
  const sheets = await fetchPaliSheets(Astro.url);
  if (sheets.length) {
    return Astro.redirect(Astro.url + "/" + sheets[0].id);
  }
} catch (error) {
  console.error(error);
}
